<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Pickup</th>
      <th>Drop</th>
      <th>Pick time</th>
      <th>Vehicletype</th>
      <th>Mobilenumber</th>
      <th>Items</th>
      <th>Labour</th>
      <th>Couponused</th>
      <th>Verified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.pickup %></td>
        <td><%= order.drop %></td>
        <td><%= order.pick_time %></td>
        <td><%= order.vehicletype %></td>
        <td><%= order.mobilenumber %></td>
        <td><%= order.items %></td>
        <td><%= order.labour %></td>
        <td><%= order.couponused %></td>
        <td><%= order.verified %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

